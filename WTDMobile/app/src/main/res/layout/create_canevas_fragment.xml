<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_canvas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_canevas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_canevas_name"
                android:layout_width="171dp"
                android:layout_height="38dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lobster_two"
                android:text="Nom du canevas"
                android:textSize="26sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@color/white"
                android:contentDescription="Edit Button"
                app:layout_column="2"
                app:layout_row="0"
                tools:ignore="SpeakableTextPresentCheck"
                tools:src="@drawable/baseline_edit_24" />
        </androidx.gridlayout.widget.GridLayout>

        <Button
            android:id="@+id/btn_day"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Jour" />

        <TextView
            android:id="@+id/txt_mon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/merriweather_sans_light"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:text="Lundi" />

        <TextView
            android:id="@+id/txt_thu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/merriweather_sans_light"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:text="Jeudi" />

        <TextView
            android:id="@+id/txt_dispo"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lobster_two"
            android:text="Disponibilité"
            android:textSize="26sp"
            android:textStyle="bold" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_from"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lobster_two"
                android:text="De"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/txt_hour"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lobster_two"
                android:text="12h"
                android:textSize="26sp"
                app:layout_column="1"
                app:layout_row="0" />

            <TextView
                android:id="@+id/txt_hour2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lobster_two"
                android:text="12h"
                android:textSize="26sp"
                app:layout_column="3"
                app:layout_row="0" />

            <TextView
                android:id="@+id/txt_to"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lobster_two"
                android:text="à"
                android:textSize="26sp"
                app:layout_column="2"
                app:layout_row="0" />

            <ImageButton
                android:id="@+id/btn_edit2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@color/white"
                android:contentDescription="Edit Button"
                app:layout_column="5"
                app:layout_row="0"
                tools:ignore="SpeakableTextPresentCheck"
                tools:src="@drawable/baseline_edit_24" />

        </androidx.gridlayout.widget.GridLayout>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_de2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lobster_two"
                android:text="De"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/txt_hour3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lobster_two"
                android:text="12h"
                android:textSize="26sp"
                app:layout_column="1"
                app:layout_row="0" />

            <TextView
                android:id="@+id/txt_hour4"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lobster_two"
                android:text="12h"
                android:textSize="26sp"
                app:layout_column="3"
                app:layout_row="0" />

            <TextView
                android:id="@+id/txt_to2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lobster_two"
                android:text="à"
                android:textSize="26sp"
                app:layout_column="2"
                app:layout_row="0" />

            <ImageButton
                android:id="@+id/btn_edit3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@color/white"
                android:contentDescription="Edit Button"
                app:layout_column="5"
                app:layout_row="0"
                tools:ignore="SpeakableTextPresentCheck"
                tools:src="@drawable/baseline_edit_24" />

        </androidx.gridlayout.widget.GridLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Enregistrer" />
    </LinearLayout>

</FrameLayout>